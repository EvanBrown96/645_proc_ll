/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Add8Carry(a=in[0..7], b[0]=true, b[1..6]=false, out=out[0..7], carry=c1);
    Add8Carry(a=in[8..15], b[0]=c1, b[1..6]=false, out=out[8..15], carry=unused);
}
